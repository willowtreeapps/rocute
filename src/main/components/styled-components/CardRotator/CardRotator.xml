<?xml version="1.0" encoding="utf-8" ?>
<component name="CardRotator" extends="Panel" >
    <script type="text/brightscript" uri="CardRotator.brs" />
    <interface>
        <field
            id="content"
            type="node"
            onChange="updateContents"
            value = "[]"
        />
        <field
            id="targetSet"
            type="node"
            onChange="updateTargetSet"
            value = "[]"
        />
    </interface>
    <children>
        <TargetList id="CardRotatorList" defaultTargetSetFocusIndex="1" advanceKey="down" reverseKey="up" />
    </children>
</component>