        </animation>
        <animation id = "outAnimation" duration=".3" easeFunction="inOutQuad" >
            <Vector2dFieldInterpolator id="outInterpol" fieldToInterp = "grid.translation" key="[0,1]" keyValue="[[0,0],[0, -115]]" />
